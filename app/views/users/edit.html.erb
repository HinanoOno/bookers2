<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User Info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this book from being saved:
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <p>Name</p>
          <%= f.text_field :name ,class: "form-control"%>
        </div>
        <div class="form-group">
          <p>Image</p>
          <%= f.file_field :profile_image, class: 'form-control',placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <div class="form-group">
          <p>Introduction</p>
          <%= f.text_field :introduction ,class: "form-control"%>
        </div>
        
      	<div class="form-group">
      	  <%= f.submit 'Update User',class:" btn btn-success" %>
      	</div>
        
      <% end %>
      
    </div>
  </div>
</div>
